<script>
    const courses = {{{ courses }}};
    console.log(courses);

    let cost = courses.map(c => c.cost).sort();
    let a = 0, b = 0, c = 0, d = 0;
    for (let i of cost) {
        if (i < 300000) a++;
        else if (i >= 300000 && i < 500000) b++;
        else if (i >= 500000 && i < 700000) c++;
        else if (i >= 700000) d++;
    }
    let dataCost = [a, b, c, d];
    let labelsCost = [
