{{!-- doughnut chart --}}
<script>
    function DoughnutChart(labels, data, title) {
        const dataChart = {
            labels: labels,
            datasets: [{
                label: '',
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132)',
                    'rgba(255, 159, 64)',
                    'rgba(255, 205, 86)',
                    'rgba(75, 192, 192)',
                    'rgba(54, 162, 235)',
                    'rgba(153, 102, 255)',
                    'rgba(201, 203, 207)'
                ],
                hoverOffset: 4
            }]
        };
        return configChart = {
            type: 'doughnut',
            data: dataChart,
            options: {
                plugins: {
                    title: {
                        display: true,
                        text: title,
                    },
                    legend: {
                        position: 'bottom',
                    },
                }
            }
        };
    }
</script>

{{!-- Bar chart --}}
<script>
    function BarChart(label, data, title, dataSetLabel) {
        const dataBar = {
            labels: label,
            datasets: [
                {
                    label: dataSetLabel,
                    data: data,
                    borderColor: [
                        'rgb(255, 99, 132)',
                        'rgb(255, 159, 64)',
                        'rgb(255, 205, 86)',
                        'rgb(75, 192, 192)',
                        'rgb(54, 162, 235)',
                        'rgb(153, 102, 255)',
                        'rgb(201, 203, 207)'
                    ],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 205, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(201, 203, 207, 0.2)'
                    ],
                    barPercentage: 0.5,
                },
            ],
        };
        return configBar = {
            type: "bar",
            data: dataBar,
            options: {
                indexAxis: "y",
                elements: {
                    bar: {
                        borderWidth: 2,
                    },
                },
                responsive: true,
                plugins: {
                    legend: {
                        position: "none",
                    },
                    title: {
                        display: true,
                        text: title,
                    },
                },
            },
        };
    }
</script>

