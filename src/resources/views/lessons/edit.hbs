<div class="mt-4">
    <h3>Sửa bài học</h3>
    <form method="POST" action="/lessons/{{lesson._id}}?_method=PUT">
        <div class="form-group">
        <label for="name">Tên bài học</label>
        <input type="text" class="form-control" name="name" value="{{lesson.name}}">
    </div>
    <div class="form-group">
        <label for="description">Mô tả</label>
        <input type="text" class="form-control" name="description" value="{{lesson.description}}">
    </div>
    <div class="form-group">
        <label for="imageUrl">Image Url</label>
        <input type="text" class="form-control" name="imageUrl" value="{{lesson.imageUrl}}">
    </div>
    <div class="form-group">
        <label for="time">Thời gian</label>
        <input type="text" class="form-control" name="time" value="{{lesson.time}}">
    </div>
    <div class="form-group">
        <label for="course">Khoá học</label>
        <select class="custom-select form-control-sm checkbox-select-all-options" name="course" required>
            {{#each courses}}
                <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-primary lesson-btn">Update</button>
    </form>
</div>
